          -address=0.0.0.0:8085 \
          -log-level=debug
        ExecStop=/usr/bin/docker stop -t 2 bootcfg
        ExecStopPost=/usr/bin/docker rm -f bootcfg

        [Install]
        WantedBy=default.target
    - name: dnsmasq.service
      enable: true
      command: start
      content: |
        [Service]
        Restart=always
        ExecStartPre=-/usr/bin/docker stop dnsmasq
        ExecStartPre=-/usr/bin/docker rm -f dnsmasq
        ExecStart=/usr/bin/docker run \
          --name dnsmasq \
          --net=host \
          --cap-add NET_ADMIN \
          quay.io/coreos/dnsmasq \
          --no-daemon \
          --enable-tftp \
          --tftp-root=/var/lib/tftpboot \
          --dhcp-userclass=set:ipxe,iPXE \
          --dhcp-boot=tag:#ipxe,undionly.kpxe \
          --dhcp-boot=tag:ipxe,http://bootcfg.kubermesh:30085/boot.ipxe \
          --log-queries \
          --log-dhcp \
          --interface=cluster \
          --bind-dynamic \
          --dhcp-range=172.30.0.10,172.30.0.14 \
          --dhcp-range=::,constructor:cluster,ra-only \
          --enable-ra \
          --address=/bootcfg.kubermesh/172.30.0.9
        ExecStop=/usr/bin/docker stop -t 2 dnsmasq
        ExecStopPost=/usr/bin/docker rm -f dnsmasq

